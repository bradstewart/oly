{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
