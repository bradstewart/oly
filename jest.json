{
  "testEnvironment": "node",
  "testRegex": "(Test)\\.(ts|tsx)$",
  "transform": {
    ".(ts|tsx)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "coverageReporters": [
    "html",
    "lcov"
  ],
  "mapCoverage": true,
  "testURL": "http://127.0.0.1/",
  "globals": {
    "ts-jest": {
      "tsConfigFile": "test/tsconfig.json"
    }
  }
}
