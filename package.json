{
  "private": true,
  "devDependencies": {
    "@types/jest": "19.2.4",
    "@types/node": "7.0.31",
    "jest": "20.0.4",
    "lerna": "2.0.0-rc.5",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.6",
    "ts-node": "3.0.6",
    "tslint": "5.4.3",
    "typescript": "2.3.4"
  },
  "scripts": {
    "docs": "packages/oly-docs/bin/oly-docs",
    "docs:dev": "HTML=false OUT=packages/oly-docs/src/web/assets yarn docs -- --verbose",
    "all": "lerna run clean && lerna bootstrap && lerna run build && lerna run test",
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "tslint --fix packages/**/src/**/*.ts",
    "test": "lerna run test",
    "lint:ci": "tslint --force -o checkstyle-result.xml -t checkstyle packages/**/src/**/*.ts",
    "test:ci": "mocha -r ts-node/register packages/**/test/**/*Test.{ts,tsx}",
    "publish": "lerna publish --force-publish=*"
  },
  "jest": {
    "preset": "./jest.json",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts,tsx}",
      "!packages/oly-docs/**/*.{ts,tsx}",
      "!packages/oly-cli/**/*.{ts,tsx}",
      "!packages/oly-tools/**/*.{ts,tsx}"
    ],
    "globals": {
      "__TS_CONFIG__": "packages/oly-core/test/tsconfig.json"
    }
  }
}
