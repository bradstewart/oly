{
  "private": true,
  "devDependencies": {
    "@types/jest": "19.2.3",
    "@types/node": "7.0.18",
    "jest": "20.0.3",
    "lerna": "2.0.0-rc.4",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.3",
    "tslint": "5.2.0",
    "tslint-react": "3.0.0",
    "typescript": "2.3.2"
  },
  "scripts": {
    "docs": "node packages/oly-docs/bin/oly-docs",
    "docs:dev": "JS=true DIRECTORY_OUT=packages/oly-docs/src/web/assets node packages/oly-docs/bin/oly-docs",
    "all": "lerna run clean; lerna bootstrap; lerna run build; lerna run test",
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "tslint --fix packages/**/src/**/*.ts",
    "test": "lerna run test",
    "lint:ci": "tslint --force -o checkstyle-result.xml -t checkstyle packages/**/src/**/*.ts",
    "test:ci": "jest --coverage",
    "publish": "lerna publish --force-publish=*"
  },
  "jest": {
    "preset": "./jest-preset.json",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverageFrom": [
      "packages/**/src/**/*.{ts,tsx}",
      "!packages/oly/**/*.{ts,tsx}",
      "!packages/oly-test/src/**/*.{ts,tsx}",
      "!packages/oly-docs/src/**/*.{ts,tsx}",
      "!packages/oly-cli/**/*.{ts,tsx}",
      "!packages/oly-tools/**/*.{ts,tsx}"
    ],
    "globals": {
      "__TS_CONFIG__": "packages/oly-core/test/tsconfig.json"
    }
  }
}
